<div class="row">

  <div class="col-sm-4">
    <h3>Create Categories</h3>
    <form action="/admin/categories/create" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          name="name"
          placeholder="Enter Title"
          class="form-control"
        />
      </div>
      <button class="btn btn-primary">Create Category</button>
    </form>
  </div>

  <div class="col-sm-8">
    <h3>Categories List</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th></th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each allCategory}}
          <tr>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td><a
                href="/admin/categories/edit/{{_id}}"
                class="btn btn-info"
              >Edit</a></td>
            <td>
              <form
                action="/admin/categories/{{_id}}?_method=DELETE"
                method="Post"
              >
                <button class="btn btn-danger">DELETE</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</div>