<div class="row">

  <div class="col-sm-4">
    <h3>Edit Category</h3>
    <form
      action="/admin/categories/edit/{{editCat._id}}?_method=PUT"
      method="post"
    >
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          name="name"
          value="{{editCat.name}}"
          placeholder="Enter Title"
          class="form-control"
        />
      </div>
      <button class="btn btn-primary">Update Category</button>
    </form>
  </div>

</div>